<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="?android:attr/selectableItemBackground">

    <!--<com.facebook.drawee.view.SimpleDraweeView-->
    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/fragment_mine_mymusic_songlist_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/china"/>

    <LinearLayout
        android:layout_marginLeft="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/fragment_mine_mymusic_songlist_menu"
        android:layout_toRightOf="@+id/fragment_mine_mymusic_songlist_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_mine_mymusic_songlist_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="如果我变成回忆"
            android:textColor="@color/primaryfont"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/fragment_mine_mymusic_songlist_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLength="20"
            android:maxLines="1"
            android:text="2首"
            android:textColor="@color/smallfont"
            android:textSize="11sp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/fragment_mine_mymusic_songlist_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:background="?android:attr/selectableItemBackground"
        android:scaleType="centerInside"
        android:src="@drawable/actionbar_more" />
</RelativeLayout>